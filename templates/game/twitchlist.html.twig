{% extends 'adminBase.html.twig' %}

{% block body %}
    <h1 class="mb-3">Twitch game list</h1>
    <div class="flex justify-between mb-2">
        <a class="text-xl font-medium align-middle" href="{{ path('admin_dashboard') }}">
            <i class="fa-solid fa-chevron-left"></i>
            Dashboard
        </a>
    </div>
    <div class="w-full overflow-x-auto space-y-2 rounded-sm">
		<div class="inline-flex min-w-full gap-x-4 panel bg-amber-300 rounded-sm text-neutral-900 font-medium">
			<div class="shrink-0">Image</div>
			<div class="w-64 shrink-0">Name</div>
		</div>
        {% for game in twitchGames %}
			<a class="inline-flex min-w-full panel panel-hover gap-x-4" href="{{ path('game_new', {'id': game.id, 'name': game.name, 'boxArtURL': game.boxArtURL, 'redirect': 'game_twitch_list'}) }}">
				<div class="shrink-0 whitespace-nowrap"><img src="{{ game.boxArtURL|replace({'{width}': '50', '{height}': '75'}) }} }}"/></div>
				<div class="w-64 shrink-0 whitespace-nowrap truncate">{{ game.name }}</div>
			</a>
        {% endfor %}
    </div>
{% endblock %}
