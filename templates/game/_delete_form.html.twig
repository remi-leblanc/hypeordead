<form method="post" action="{{ path('game_delete', {'id': game.id}) }}" class="flex flex-col" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ game.id) }}">
    <button class="bg-red-500 text-white"><i class="fa-solid fa-trash-alt"></i></button>
</form>
