{% extends 'adminBase.html.twig' %}

{% block body %}
    <h1 class="mb-3">Tag list</h1>
    <div class="flex justify-between mb-2">
        <a class="text-xl font-medium align-middle" href="{{ path('admin_dashboard') }}">
            <i class="fa-solid fa-chevron-left"></i>
            Dashboard
        </a>
        <a class="text-xl font-medium align-middle" href="{{ path('tag_new') }}">
			Ajouter
            <i class="fas fa-plus-circle"></i>
        </a>
    </div>
    <div class="w-full overflow-x-auto space-y-2 rounded-sm">
		<div class="inline-flex min-w-full bg-amber-300 rounded-sm p-3 text-neutral-900 font-medium">
			<div class="w-64 shrink-0">Name</div>
			<div class="w-64 shrink-0">Type</div>
			<div class="w-64 shrink-0">Hidden</div>
		</div>
        {% for tag in tags %}
			<a class="inline-flex min-w-full panel panel-hover p-3" href="{{ path('tag_edit', {'id': tag.id}) }}">
				<div class="w-64 shrink-0 whitespace-nowrap truncate">{{ tag.name }}</div>
				<div class="w-64 shrink-0 whitespace-nowrap truncate">{{ tag.type }}</div>
				<div class="w-64 shrink-0 whitespace-nowrap truncate">{{ tag.hidden ? 'Yes' : 'No' }}</div>
			</a>
        {% endfor %}
    </div>
{% endblock %}
